<interface>
  <!-- Main Menu Description (implemented later) -->
  <menu id="main-menu">
    <submenu>
      <attribute name="label" translatable="yes">Get GPU Names</attribute>
      <item>
        <attribute name="label" translatable="yes">SubProcess</attribute>
        <attribute name="action">win.subprocess</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Processor</attribute>
        <attribute name="action">win.processor</attribute>
      </item>
    </submenu>

    <item>
      <attribute name="label" translatable="yes">Open Nvidia Settings</attribute>
      <attribute name="action">win.open_nvidia_settings</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Open App Settings</attribute>
      <attribute name="action">win.open_app_settings</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Test Formatter and Property</attribute>
      <attribute name="action">win.formatter_and_property</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Test Providers</attribute>
      <attribute name="action">win.providers</attribute>
    </item>
  </menu>

  <!-- Header Implementation (implements main-menu) -->
  <template class="NvidiaExtensionMainWindow" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">Nvidia App</property>
    <property name="width-request">360</property>
    <child type="titlebar">
      <object class="AdwHeaderBar">
        <child type="end">
          <object class="GtkMenuButton">
            <property name="icon-name">open-menu-symbolic</property>
            <property name="menu-model">main-menu</property>
            <property name="tooltip-text" translatable="yes">Main Menu</property>
          </object>
        </child>
      </object>
    </child>

  <!-- Content Container Implementation -->
    <child>
      <object class="GtkScrolledWindow">
        <property name="hscrollbar-policy">never</property>
        <property name="min-content-height">420</property>
        <property name="vexpand">True</property>
        <property name="child">
          <object class="AdwClamp">
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="spacing">12</property>
                <!-- Content Implementation -->
                <child>
                  <!--
                  <object class="GtkEntry" id="entry">
                    <property name="placeholder-text" translatable="yes">Enter a Taskâ€¦</property>
                    <property name="secondary-icon-name">list-add-symbolic</property>
                  </object>
                  -->
                </child>
                <child>
                  <!--
                  <object class="GtkListBox" id="tasks_list">
                    <property name="valign">start</property>
                    <property name="visible">False</property>
                    <property name="selection-mode">none</property>
                    <style>
                      <class name="boxed-list" />
                    </style>
                  </object>
                  -->
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </child>

  </template>
</interface>
